{
  "name": "quinoa",
  "version": "0.0.1",
  "private": true,
  "description": "Experimental rich editor for dataviz narration.",
  "main": "./build/quinoa.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register -R spec --recursive ./test",
    "check": "npm test && npm run lint",
    "dist": "babel src --out-dir ./",
    "lint": "eslint src test",
    "prepublish": "npm run dist",
    "build": "babel src --out-dir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medialab/quinoa.git"
  },
  "keywords": [
    "editor",
    "dataviz"
  ],
  "contributors": [
    {
      "name": "Guillaume Plique",
      "url": "https://github.com/Yomguithereal"
    }
  ],
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/medialab/quinoa/issues"
  },
  "homepage": "https://github.com/medialab/quinoa#readme",
  "dependencies": {
    "classnames": "^2.2.5",
    "codemirror": "^5.17.0",
    "commonmark": "^0.26.0",
    "draft-js": "^0.9.1",
    "draft-js-export-markdown": "^0.2.0",
    "draft-js-import-markdown": "^0.1.6",
    "lodash": "^4.14.1",
    "react-codemirror": "^0.2.6",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-redux": "^4.4.5",
    "recompose": "^0.20.2",
    "redux": "^3.5.2",
    "uuid": "^2.0.2"
  },
  "devDependencies": {
    "@yomguithereal/eslint-config": "^3.0.0",
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "eslint": "^3.2.2",
    "eslint-plugin-react": "^6.0.0",
    "mocha": "^3.0.2",
    "react": "^15.1.0",
    "react-dom": "^15.1.0"
  },
  "peerDependencies": {
    "react": "^15.1.0",
    "react-dom": "^15.1.0"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread"
    ],
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "@yomguithereal/eslint-config/es7",
      "@yomguithereal/eslint-config/react"
    ],
    "globals": {
      "sigma": true
    }
  }
}
